<div class="navbar-buddy-up">
  <!-- Logo -->
  <%= link_to root_path, class: "buddy-up-logo" do %>
    <%= image_tag "http://www.pngall.com/wp-content/uploads/2018/05/Friends-PNG-File.png", height: 50 %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-buddy-up-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%= link_to "Create an event", new_event_path , class: "navbar-buddy-up-item navbar-buddy-up-link" %>
      <%= link_to "Profile", user_path(current_user), class: "navbar-buddy-up-item navbar-buddy-up-link" %>
      <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "navbar-buddy-up-item navbar-buddy-up-link" %>

      <%= link_to user_path(current_user), class: "navbar-buddy-up-item" do %>
        <%= image_tag current_user.user_photo.url(:avatar), class: "avatar" %>
      <% end %>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Sign in"), new_user_session_path, class: "navbar-buddy-up-item navbar-buddy-up-link" %>
      <%= link_to "Sign up", new_user_path, class: "navbar-buddy-up-item navbar-buddy-up-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-buddy-up-item hidden-md hidden-lg">
    <div class="dropdown">
      <% if user_signed_in? %>
        <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-buddy-up-dropdown-menu">
          <li>
            <%= link_to "Create an event", new_event_path , class: "navbar-buddy-up-item navbar-buddy-up-link" %>
          </li>
          <li>
            <%= link_to "Profile", user_path(current_user), class: "navbar-buddy-up-item navbar-buddy-up-link" %>
          </li>
          <li>
            <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "navbar-buddy-up-item navbar-buddy-up-link" %>
          </li>
        </ul>
      <% else %>
        <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-buddy-up-dropdown-menu">
          <li>
            <%= link_to t(".sign_in", default: "Sign in"), new_user_session_path, class: "navbar-buddy-up-item navbar-buddy-up-link" %>
          </li>
          <li>
            <%= link_to "Sign up", new_user_path, class: "navbar-buddy-up-item navbar-buddy-up-link" %>
          </li>
        </ul>
      <% end %>
    </div>
  </div>
</div>
