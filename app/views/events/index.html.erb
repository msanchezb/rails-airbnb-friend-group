<div id="event-index" class="container-lg">
  <div class="event-index-header">
    <h1>Events happening near <em>Hoxton</em></h1>
    <div class="search-bar">
      <p>Search again placeholder</p>
    </div>
  </div>
  <div class="main-flex">
    <div class="card-container">
      <div class="row">
        <% @events.each do |event| %>
          <div class="col-xs-6">
            <div class="event-card">
              <%= link_to "", event_path(event), class: "divlink" %>
              <div class="card-img" style="background-image: url(<%= image_path 'friends.jpg' %>)">
              </div>
              <div class="card-info">
                <div class="card-info-header">
                  <span><%= event.name %></span>
                  <i class="fas fa-beer"></i>
                </div>
                <div class="card-info-body">
                  <div class="card-info-body-l">
                    <p><%= event.user.name.capitalize %> and <%= event.group_size %> friends</p>
                    <p><%= event.location.capitalize %></p>
                  </div>
                  <div class="card-info-body-r">
                    <p>Sunday 26th Aug</p>
                    <p>20:00</p>
                  </div>
                </div>
                <%#= link_to "Edit", edit_event_path(event) %>
                <%#= link_to "Delete", event_path(event), method: :delete %>

              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div id="index-map">
      <img src=<%= image_path 'map.png' %>>
    </div>
  </div>

</div>
